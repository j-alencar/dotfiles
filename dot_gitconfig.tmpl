[user]
    name = {{ .name | quote }}
    email = {{ .email | quote }}

[core]
    autocrlf = false
    excludesfile = ~/.gitignore_global
    hooksPath = ~/.config/git/hooks

[init]
    defaultBranch = main

[pull]
    rebase = true

[rebase]
    autoStash = true

[fetch]
    prune = true

[push]
    autoSetupRemote = true

[merge]
    conflictstyle = zdiff3

[diff]
    colorMoved = zebra
    algorithm = histogram

[help]
    autocorrect = prompt

[rerere]
    enabled = true

[alias]
    lg = log --oneline --graph --decorate --all
    undo = reset --soft HEAD~1
